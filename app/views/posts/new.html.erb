<main>
  <div class="container">
    <div id="posts">

      <h2>投稿フォーム(仮)</h2>
      <div id="post-error">
        <ul>
          <% @post.errors.full_messages.each do |error| %>
          <li><%= error %></li>
          <% end %>
        </ul>
      </div>
      <%= form_tag(create_url) do %>
      <div id="form-message">
        <h3>投稿内容</h3>
        <textarea id="input-message" name="message"><%= @post.message %></textarea>
      </div>
      <div id="form-author">
        <h3>投稿者名</h3>
        <input id="input-author" type="text" name="author" value="<%= @post.author %>">
      </div>
      <input id="submit-button" type="submit" value="投稿">
      <% end %>

    </div>
  </div>
</main>
