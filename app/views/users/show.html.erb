<main>
  <div class="container">
    <div id="users">
      <h2>ユーザ情報</h2>
        ユーザ名: <%= @user.name %><br>
        メールアドレス: <%= @user.email %><br>
        アイコン: <img class="icon-medium" src="<%= "/icons/#{@user.image_name}" %>"><br>

      <% if @current_user.id == @user.id %>
      <div>
        <%= link_to("編集", edit_url) %>
      </div>
      <% end %>

    </div>
  </div>
</main>
